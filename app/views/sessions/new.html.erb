<!-- app/views/sessions/new.html.erb -->

<h1>Log in!</h1>

<% flash.each do |type, msg| %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
<% end %>

<%= form_with(url: '/login', class: "form-horizontal center") do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :email, value: params[:email], class: 'form-control', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
